<UserControl x:Class="EmbeddedDebugger.View.UserControls.ObjectDisplayers.RegisterDisplayerUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EmbeddedDebugger.View.UserControls.ObjectDisplayers"
             xmlns:converters="clr-namespace:EmbeddedDebugger.View.Converters"
             xmlns:enums="clr-namespace:EmbeddedDebugger.DebugProtocol.Enums;assembly=EmbeddedDebugger.DebugProtocol"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:model="clr-namespace:EmbeddedDebugger.Model;assembly=EmbeddedDebugger.Model"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="965" Background="White"
             x:Name="rduc"
             HorizontalAlignment="Left"
             DataContextChanged="RegisterDisplayerUserControl_OnDataContextChanged">
    <UserControl.Resources>
        <ObjectDataProvider x:Key="ChannelModeEnumData"
                                MethodName="GetValues" 
                                ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enums:ChannelMode" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="Linecolors"
                                ObjectType="{x:Type model:Register}">
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="ValueDisplayFormatEnumData"
                                MethodName="GetValues" 
                                ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enums:ValueDisplayFormat" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <converters:BooleanAndConverter x:Key="BooleanAndConverter"/>
        <converters:BooleanOrConverter x:Key="BooleanOrConverter"/>
        <converters:BooleanInverterConverter x:Key="BooleanInverterConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border BorderThickness="1" BorderBrush="Black" Height="30" Width="965" HorizontalAlignment="Left">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="65"/>
                    <ColumnDefinition Width="43"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Button Name="CollapseButton" Background="Transparent" BorderThickness="0" Content="{Binding ElementName=rduc, Path=Collapsed, Converter={StaticResource booleanToCollapsedConverter}}" Visibility="{Binding ElementName=rduc, Path=Register.HasChildren, Converter={StaticResource booleanToVisibilityConverter}}"  Click="CollapseButton_OnClick "/>
                <TextBlock Grid.Column="1" Text="{Binding ElementName=rduc, Path=Register.CpuID}" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="2" Text="{Binding ElementName=rduc, Path=Register.ID}" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="3" Text="{Binding ElementName=rduc, Path=Register.Name}" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="4" Text="{Binding ElementName=rduc, Path=Register.VariableTypeString}" VerticalAlignment="Center"/>
                <ComboBox Grid.Column="5" Margin="3" SelectedItem="{Binding ElementName=rduc, Path=Register.ValueDisplayFormat, UpdateSourceTrigger=PropertyChanged}"
                  ItemsSource="{Binding Source={StaticResource ValueDisplayFormatEnumData}}" Padding="3,0" VerticalContentAlignment="Center" >
                    <ComboBox.IsEnabled>
                        <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                            <Binding ElementName="rduc" Path="Register.IsIntegralValue" />
                            <Binding ElementName="rduc" Path="Register.IsVariableSize" Converter="{StaticResource BooleanInverterConverter}" />
                        </MultiBinding>
                    </ComboBox.IsEnabled>
                </ComboBox>
                <TextBox Grid.Column="6" BorderThickness="0" Margin="3" Name="ValueTextBox" IsEnabled="{Binding ElementName=rduc, Path=Register.IsWritable}" FontFamily="Consolas" VerticalAlignment="Center" TextAlignment="Right"/>
                <ComboBox Grid.Column="7" Margin="3" SelectedItem="{Binding ElementName=rduc, Path=Register.ChannelMode, UpdateSourceTrigger=PropertyChanged}"
                  ItemsSource="{Binding Source={StaticResource ChannelModeEnumData}}" VerticalContentAlignment="Center" Padding="3,0" >
                    <ComboBox.IsEnabled>
                        <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                            <Binding ElementName="rduc" Path="Register.IsReadable" />
                            <Binding ElementName="rduc" Path="Register.IsVariableSize" Converter="{StaticResource BooleanInverterConverter}" />
                        </MultiBinding>
                    </ComboBox.IsEnabled>
                </ComboBox>
                <CheckBox Grid.Column="8" Name="PlotCheckBox" VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding ElementName=rduc, Path=Register.Plot, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                  Checked="PlotCheckBox_OnChecked "  Unchecked="PlotCheckBox_OnUnchecked" VerticalContentAlignment="Center" >
                    <CheckBox.IsEnabled>
                        <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                            <Binding ElementName="rduc" Path="Register.IsReadable"/>
                            <Binding ElementName="rduc" Path="Register.IsIntegralValue" />
                            <Binding ElementName="rduc" Path="Register.IsVariableSize" Converter="{StaticResource BooleanInverterConverter}"/>
                        </MultiBinding>
                    </CheckBox.IsEnabled>
                </CheckBox>
                <!--SelectedItem="{Binding LineKnownColor, UpdateSourceTrigger=PropertyChanged}"-->
                <ComboBox Grid.Column="9" Margin="3"
                  ItemsSource="{Binding Source={StaticResource Linecolors}, Mode=OneWay}" VerticalContentAlignment="Center" Padding="3,0">
                    <ComboBox.IsEnabled>
                        <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                            <Binding ElementName="rduc" Path="Register.IsReadable"/>
                            <Binding ElementName="rduc" Path="Register.IsIntegralValue" />
                            <Binding ElementName="rduc" Path="Register.IsVariableSize" Converter="{StaticResource BooleanInverterConverter}" />
                        </MultiBinding>
                    </ComboBox.IsEnabled>
                </ComboBox>
                <CheckBox Grid.Column="10" VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding ElementName=rduc, Path=Register.Log, UpdateSourceTrigger=PropertyChanged}" 
                  IsEnabled="{Binding ElementName=rduc, Path=Register.IsReadable}" VerticalContentAlignment="Center"/>
                <Button Grid.Column="11" Margin="3" Name="RefreshButton" Content="Refresh" Click="RefreshButton_OnClick" Padding="0" BorderThickness="0">
                    <Button.IsEnabled>
                        <MultiBinding Converter="{StaticResource BooleanOrConverter}">
                            <Binding ElementName="rduc" Path="Register.IsReadable"/>
                            <Binding ElementName="rduc" Path="Register.IsWritable" />
                        </MultiBinding>
                    </Button.IsEnabled>
                </Button>
            </Grid>
        </Border>
        <StackPanel Grid.Row="1" Margin="30,0,0,0" Name="ChildrenStackPanel" Visibility="{Binding ElementName=rduc, Path=Collapsed, Converter={StaticResource booleanToVisibilityConverter}, ConverterParameter=Visibility.Collapsed}"/>
    </Grid>
</UserControl>
